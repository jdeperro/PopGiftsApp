# LangChain Configuration (Optional - for monitoring)
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=popgifts-platform
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# AI Image Generation (for Illustrator Agent)
# Option 1: Google AI Studio (Imagen)
GOOGLE_AI_STUDIO_API_KEY=your_google_ai_key_here
GOOGLE_AI_PROJECT_ID=your_project_id_here

# Option 2: Stability AI (alternative)
# STABILITY_AI_API_KEY=your_stability_key_here

# Option 3: OpenAI DALL-E (alternative)
# OPENAI_API_KEY=your_openai_key_here

# AI Text/Editing Models (for Editor Agent)
# OpenAI (for grammar, spell-check, text generation)
OPENAI_API_KEY=your_openai_key_here

# Anthropic Claude (alternative for text editing)
# ANTHROPIC_API_KEY=your_anthropic_key_here

# External Services
# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# NeoCurrency API
NEOCURRENCY_API_KEY=your_neocurrency_key_here
NEOCURRENCY_API_URL=https://api.neocurrency.com/v1

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/popgifts
REDIS_URL=redis://localhost:6379
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# AWS S3 / Cloudflare R2 (for asset storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=popgifts-assets

# Environment
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# AI Configuration
AI_GENERATION_TIMEOUT=15000
AI_MAX_RETRIES=3
AI_IMAGE_MODEL=imagen-2
AI_TEXT_MODEL=gpt-4-turbo-preview
